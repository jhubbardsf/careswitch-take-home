datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int         @id @default(autoincrement())
  name       String
  email      String      @unique
  avatar     String
  workspaces Workspace[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Workspace {
  id          Int      @id @default(autoincrement())
  name        String
  users       User[]
  avatar      String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
